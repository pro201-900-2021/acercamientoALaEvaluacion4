<Window x:Class="acercamientoALaEvaluacion4.Views.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:acercamientoALaEvaluacion4.Views"
        mc:Ignorable="d"
        Title="AuthWindow" Height="270" Width="380" Background="Aqua">
    <Grid>
        <Label x:Name="label" Content="Autentificación" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Width="180" FontFamily="Century Gothic" FontSize="22" FontWeight="Bold" />
        <Label x:Name="label1" Content="Nombre Usuario: " HorizontalAlignment="Left" Margin="87,100,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Contraseña: " HorizontalAlignment="Left" Margin="114,141,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxUserName" HorizontalAlignment="Left" Margin="190,104,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordBoxPass" HorizontalAlignment="Left" Margin="190,145,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buttonIngresar" Content="Ingresar" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" Width="360" FontFamily="Comic Sans MS" Click="buttonIngresar_Click"/>

    </Grid>
</Window>
